<Window x:Class="Homework_13.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework_13"
        xmlns:uc="clr-namespace:Homework_13.UserControls"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="450" 
        Width="800"
        DataContext="{Binding MainWindowVM, Source={StaticResource Locator}}">
    
    <StackPanel Margin="5">
        <uc:MainMenuUserControl/>
        <uc:MainUserControl/>
    </StackPanel>
</Window>
